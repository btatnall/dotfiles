# mongodb
if [ -h ~/opt/mongodb/current ]; then
  MONGODB_HOME=~/opt/mongodb/current
  PATH=$MONGODB_HOME/bin:$PATH
  export MONGODB_HOME PATH
fi

# ant
if [ -h ~/opt/ant/current ]; then
  ANT_HOME=$HOME/opt/ant/current
  export ANT_HOME
fi

#maven
if [ -h ~/opt/maven/current ]; then
  MAVEN_HOME=$HOME/opt/maven/current
  PATH=$MAVEN_HOME/bin:$PATH
  export PATH
fi

# git
export GIT_PS1_SHOWDIRTYSTATE=true;
export GIT_PS1_SHOWSTASHSTATE=true;
export GIT_PS1_SHOWUNTRACKEDFILES=true;

# emacs
alias e="emacs -nw"

# mongo
# mongod run --config /usr/local/etc/mongod.conf
